<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/teal</item>
    </style>

    <style name="Edit_Text_Default_Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/custom_edit_text_rounded_corner</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Edit_Text_Container_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/custom_edit_text_rounded_corner</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Text_View_Error_Message_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">"@string/error_message"</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>