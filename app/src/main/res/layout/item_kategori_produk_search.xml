<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="@dimen/mrgn_1"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_gambar_kategori"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_product_categories"
        android:src="@drawable/pv_invisible_image"/>
    <TextView
        android:id="@+id/tv_kategori_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Kategori"
        android:textColor="@color/black"
        android:layout_margin="@dimen/mrgn_1"
        android:layout_gravity="center_vertical"/>
</LinearLayout>