<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.homepage.components.fragment.banner.FragmentBannerBeranda">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sv_slider_banner"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderScrollTimeInSec="2"
        app:sliderIndicatorMarginBottom="5dp"
        app:sliderIndicatorMarginLeft="30dp"
        app:sliderIndicatorGravity="bottom|left"
        app:sliderIndicatorSelectedColor="@color/red"
        app:sliderIndicatorUnselectedColor="@color/darkGrey2"
        android:layout_marginBottom="10dp"
        app:sliderStartAutoCycle="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_lihat_semua_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lihat_semua_promo"
        android:textColor="@color/teal"
        android:textStyle="bold"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>