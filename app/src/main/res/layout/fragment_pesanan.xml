<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="@string/riwayat_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.homepage.fragment.FragmentPesanan">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_submenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_submenu_pesanan_item_clicked"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Menunggu Pembayaran"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_submenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_submenu_pesanan_item"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Dalam Proses"
                    android:textColor="@color/teal" />

                <TextView
                    android:id="@+id/tv_submenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_submenu_pesanan_item"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Dikirim"
                    android:textColor="@color/teal" />

                <TextView
                    android:id="@+id/tv_submenu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_submenu_pesanan_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Selesai"
                    android:textColor="@color/teal" />

                <TextView
                    android:id="@+id/tv_submenu5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_submenu_pesanan_item"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Batal"
                    android:textColor="@color/teal" />
            </LinearLayout>

        </HorizontalScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:contentDescription="Alfagift Pesanan"
            android:src="@drawable/alfagift_pesan" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yuk_belanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/detail_button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="8dp"
            android:text="Yuk, Belanja"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

